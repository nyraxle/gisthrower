{
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "rules": {
        "semi": 2
      }
    },
    "env": {
      "node": true,
      "amd": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "off",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
